@page
@model LoginModel

@{
    ViewData["Title"] = "S'identifier";
}

<div class="login-box">
    <div class="login-logo">
        <a href="~/"><b>Application Alchi</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">S'identifier à l'application Alchi</p>

            <form id="account" method="post">
                @*<h4>Utiliser votre compte utilisateur pour l'application Alchi.</h4>
                <hr />*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group mb-3">
                    @*<label asp-for="Input.Email" class="form-control"></label>*@
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <span class="fa fa-envelope input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    @*<label asp-for="Input.Password"></label>*@
                    <input asp-for="Input.Password" class="form-control" placeholder="Mot de passe" />
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-7">
                        <div class="checkbox icheck">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">S'identifier</button>
                    </div>
                    <!-- /.col -->
                </div>

                <p class="mb-1">
                    <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié&nbsp;?</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Créer un nouveau compte</a>
                </p>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
