@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Accès non autorisé";
}

<div class="login-box">
    <div class="login-logo">
        <a href="~/"><b>Application Alchi</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <h4 class="login-box-msg text-danger">@ViewData["Title"]</h4>
            <p class="login-box-msg text-danger">Vous n'avez pas les autorisations nécessaires pour accéder à cette ressource.</p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
